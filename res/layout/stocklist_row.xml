<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Channel Name"
            android:id="@+id/tv_channel_name" android:textSize="12pt"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="price"
                android:id="@+id/tv_price" android:singleLine="false"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delta"
                android:id="@+id/tv_delta" android:layout_marginLeft="15dp"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Time"
                  android:id="@+id/tv_time" android:layout_marginLeft="15dp"/>
    </LinearLayout>
    <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New ToggleButton"
            android:id="@+id/tb_channel" android:enabled="true"
            android:checked="true"/>
</LinearLayout>